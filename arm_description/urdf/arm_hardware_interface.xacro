<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro"
       xmlns:ros2_control="http://ros2-control.ros.org/">
  
  <xacro:macro name="joint_hardware_interface" params="name initial_pos">
    <joint name="${name}" type="revolute">
      <ros2_control name="${name}" type="system">
         <hardware_interface>PositionJointInterface</hardware_interface>
         
         <command_interface name="position"/>
         <state_interface name="position">
           <param name="initial_value">${initial_pos}</param>
         </state_interface>
         <state_interface name="velocity">
           <param name="initial_value">0.0</param>
         </state_interface>
         <state_interface name="effort">
           <param name="initial_value">0.0</param>
         </state_interface>
         
      </ros2_control>
    
    </joint>
    
  </xacro:macro>

</robot>
